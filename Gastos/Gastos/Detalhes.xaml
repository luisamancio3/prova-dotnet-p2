<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Gastos.Detalhes">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <Label x:Name="descricao"/>
                <Label x:Name="preco"/>
            </StackLayout>
            <StackLayout>
                <Button Margin="0,10"
                    HorizontalOptions="FillAndExpand"
                    Text="Voltar"
                    Clicked="Voltar"/>
                <Button Margin="0,10"
                    HorizontalOptions="FillAndExpand"
                    Text="Remover"
                    Clicked="Remover"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>